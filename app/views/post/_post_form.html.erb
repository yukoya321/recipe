<div class="input-field col s12">
  <%= f.text_field :name, class: 'validate', autocomplete:'off' %>
  <%= f.label :name, '料理名'%>
</div>
<h3>料理の写真</h3>
<div class="file-field input-field col s12">
  <div class="btn">
    <span>ファイル</span>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="file-path-wrapper">
    <% image_cache = @post.image_cache.present? ? File.basename(@post.image_cache) : "" %>
    <%= text_field_tag "", image_cache, class: "file-path validate" %>
    <% if @post.errors[:image].present? %>
      <span><%= @post.errors.full_messages_for(:image).join %></span>
    <% end %>
  </div>
</div>
<div class="input-field col s12">
  <%= f.text_area :description, class: 'materialize-textarea', autocomplete:'off', rows: 10 , style: "height: 150px"%>
  <%= f.label :decription, 'レシピの概要'%>
</div>
