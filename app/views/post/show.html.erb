<div class="container">
  <section>
    <%= render partial: "common/title", locals: {title: "レシピ"}%>
    <div class="row">
      <div class="col s12">
        <h2><%= @post.name%></h2>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m6">
        <%= image_tag @post.image.thumb.url, class: "responsive-img"%>
      </div>
      <%= render partial: "item_collection", locals: {obj: @post.foodstuffs, obj_name: "食材"} %>
    </div>
    <div class="row">
      <%= render partial: "item_collection", locals: {obj: @post.tags, obj_name: "タグ"} %>
      <%= render partial: "item_collection", locals: {obj: @post.foodstuffs, obj_name: "食材"} %>
    </div>
    <div class="row">
    <% @post.recipe_processes.order(order: "ASC").each do |process| %>
    <div class="col s12 m6">
      <div class="card">
        <div class="card-content">
          <span class="card-title process__title">工程: <%= process.order %></span>
          <span class="card-title bd__bottom"><%= process.title %></span>
          <p><%= process.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  </section>
</div>