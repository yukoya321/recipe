<div class="container">
  <section>
    <%= render partial: "common/title", locals: {title: "レシピ"}%>
    <div class="row">
      <div class="col s12">
        <h2><%= @post.name%></h2>
      </div>
    </div>
    <div class="card row">
      <div class="col s12 m6">
        <%= image_tag @post.image.thumb.url, class: "responsive-img"%>
      </div>
      <div class="col s12 m6">
        <table class="striped centered">
          <thead>
            <tr>
                <th>食材</th>
                <th>分量</th>
            </tr>
          </thead>
          <tbody>
          <% @post.foodstuff_amounts.order(order: "ASC").each do |f|%>
          <tr>
            <td><%= f.foodstuff %></td>
            <td><%= f.amount %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <% if @post.tags.present? %>
        <%= render partial: "item_collection", locals: {obj: @post.tags, obj_name: "タグ"} %>
      <% end %>
      <% if @post.foodstuffs.present? %>
        <%= render partial: "item_collection", locals: {obj: @post.foodstuffs, obj_name: "食材タグ"} %>
      <% end %>
    </div>
    <div class="row">
    <% @post.recipe_processes.order(order: "ASC").each do |process| %>
    <div class="col s12 m3 processe">
      <div class="card">
        <div class="card-content">
          <span class="card-title process__order"><%= process.order %></span>
          <p class="bd__bottom process__title"><%= process.title %></p>
        </div>
        <div class="card-content process__description">
          <p><%= process.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  </section>
</div>